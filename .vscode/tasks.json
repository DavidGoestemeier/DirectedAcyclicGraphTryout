{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                "${workspaceFolder}",
                "-B",
                "${workspaceFolder}/build",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-DENABLE_TESTING=ON",
                "-DENABLE_COVERAGE=ON"
            ],
            "group": "build",
            "problemMatcher": [],
            "detail": "Configure CMake project with testing and coverage"
        },
        {
            "label": "CMake: Configure Release",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                "${workspaceFolder}",
                "-B",
                "${workspaceFolder}/build",
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "CMake: Build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--config",
                "Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$msCompile", "$gcc"],
            "detail": "Build the project in Debug mode"
        },
        {
            "label": "CMake: Build Release",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--config",
                "Release"
            ],
            "group": "build",
            "problemMatcher": ["$msCompile", "$gcc"]
        },
        {
            "label": "CMake: Clean",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--target",
                "clean"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "CMake: Rebuild",
            "type": "shell",
            "dependsOrder": "sequence",
            "dependsOn": ["CMake: Clean", "CMake: Build"],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "CTest: Run All Tests",
            "type": "shell",
            "command": "ctest",
            "args": [
                "--test-dir",
                "${workspaceFolder}/build",
                "--output-on-failure",
                "--verbose"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [],
            "dependsOn": ["CMake: Build"],
            "detail": "Run all unit tests with verbose output"
        },
        {
            "label": "CTest: Run Tests (Parallel)",
            "type": "shell",
            "command": "ctest",
            "args": [
                "--test-dir",
                "${workspaceFolder}/build",
                "--output-on-failure",
                "-j",
                "8"
            ],
            "group": "test",
            "problemMatcher": [],
            "dependsOn": ["CMake: Build"]
        },
        {
            "label": "Coverage: Generate Report",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--target",
                "coverage"
            ],
            "group": "test",
            "problemMatcher": [],
            "dependsOn": ["CMake: Build"],
            "detail": "Generate code coverage report"
        },
        {
            "label": "Coverage: View HTML Report",
            "type": "shell",
            "command": "start",
            "args": [
                "${workspaceFolder}/build/coverage/index.html"
            ],
            "windows": {
                "command": "cmd",
                "args": [
                    "/c",
                    "start",
                    "${workspaceFolder}\\build\\coverage\\index.html"
                ]
            },
            "group": "test",
            "problemMatcher": [],
            "dependsOn": ["Coverage: Generate Report"]
        },
        {
            "label": "Run Main Application",
            "type": "shell",
            "command": "${workspaceFolder}/build/bin/Debug/dag_rpg_system.exe",
            "windows": {
                "command": "${workspaceFolder}\\build\\bin\\Debug\\dag_rpg_system.exe"
            },
            "group": "none",
            "problemMatcher": [],
            "dependsOn": ["CMake: Build"],
            "detail": "Build and run the main DAG RPG System"
        },
        {
            "label": "Format All Files",
            "type": "shell",
            "command": "clang-format",
            "args": [
                "-i",
                "-style=file",
                "${workspaceFolder}/src/*.cpp",
                "${workspaceFolder}/include/*.h"
            ],
            "group": "none",
            "problemMatcher": [],
            "detail": "Format all C++ source files using .clang-format"
        }
    ]
}
