# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# C++ files
[*.{cpp,h,hpp,cc,cxx}]
indent_style = space
indent_size = 4
max_line_length = 100

# CMake
[CMakeLists.txt,*.cmake]
indent_style = space
indent_size = 4

# Markdown
[*.md]
max_line_length = off
trim_trailing_whitespace = false

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Web files
[*.{html,css,js}]
indent_style = space
indent_size = 2
